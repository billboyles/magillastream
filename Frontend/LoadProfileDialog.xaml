<Window x:Class="Frontend.LoadProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Profile" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBlock Text="Load a Profile:" Margin="10"/>
            <ComboBox Name="ProfilesComboBox" Margin="10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="useProfileButton" Content="Use Profile" Width="100" Margin="5" Click="UseProfileButton_Click"/>
                <Button Name="cancelButton" Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
