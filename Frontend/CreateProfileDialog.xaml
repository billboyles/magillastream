
<Window x:Class="MagillaStream.CreateProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Profile" Height="250" Width="400">
    <Grid>
        <Label Content="Profile Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />
        <TextBox Name="profileNameTextBox" Width="200" Margin="100,10,10,10" />
        <Button Name="createProfileButton" Content="Create Profile" Width="100" Height="30" Margin="10,50,10,10" />
    </Grid>
</Window>
