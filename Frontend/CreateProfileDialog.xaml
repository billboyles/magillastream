<Window x:Class="Frontend.CreateProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Profile" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Profile Name:" Margin="10" />
            <TextBox Name="profileNameTextBox" Width="200" Margin="10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="createProfileButton" Content="Create" Width="100" Margin="5" Click="CreateProfileButton_Click" />
                <Button Name="cancelButton" Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
