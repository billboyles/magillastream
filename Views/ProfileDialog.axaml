<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MagillaStream.ViewModels"
        x:Class="MagillaStream.Views.ProfileDialog"
        x:DataType="vm:ProfileViewModel"
        Title="Profile Dialog" Width="400" Height="200">

    <StackPanel Margin="20">
        <TextBlock Text="Enter Profile Name:" FontSize="14" IsVisible="{Binding ShowTextBox}" />
        <TextBox Text="{Binding ProfileName}" Watermark="Profile Name..." Margin="0,10,0,20" IsVisible="{Binding ShowTextBox}" />
        
        <TextBlock Text="Select a Profile:" FontSize="14" IsVisible="{Binding ShowComboBox}"/>
        <ComboBox ItemsSource="{Binding AvailableProfiles}" SelectedItem="{Binding ProfileName}" IsVisible="{Binding ShowComboBox}" Width="200" Margin="0,10,0,20" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding SaveProfileCommand}" Width="80" Margin="0,0,10,0" Background="LightBlue" Foreground="White" />
            <Button Content="Cancel" Width="80" Background="LightGray" Foreground="Black" />
        </StackPanel>
    </StackPanel>
</Window>
