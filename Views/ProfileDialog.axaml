<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MagillaStream.Views.ProfileDialog"
        Title="Profile Dialog" Width="400" Height="200">

    <StackPanel Margin="20">
        <!-- Instruction Text -->
        <TextBlock x:Name="DialogInstructionText" Text="Enter Profile Name:" FontSize="14" IsVisible="False" />

        <!-- Textbox for entering profile name -->
        <TextBox x:Name="ProfileNameTextBox" Watermark="Profile Name..." Margin="0,10,0,20" IsVisible="False" />

        <!-- Dropdown for loading or deleting profiles (only shown in relevant cases) -->
        <ComboBox x:Name="ProfileDropdown" IsVisible="False" Margin="0,10,0,20" />

        <!-- OK and Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OkButton_Click" Width="80" Margin="0,0,10,0" />
            <Button Content="Cancel" Click="CancelButton_Click" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
