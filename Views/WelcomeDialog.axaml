<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MagillaStream.ViewModels"
        x:Class="MagillaStream.Views.WelcomeDialog"
        x:DataType="vm:WelcomeViewModel"
        Title="Welcome" Width="400" Height="250">
  
    <StackPanel Margin="20">
        <TextBlock Text="Welcome to the Application!" FontSize="16" FontWeight="Bold" />
        <TextBlock Text="Here is a brief overview of how to get started:" Margin="0,10,0,20"/>
        
        <!-- Additional Information -->
        <TextBlock Text="Step 1: Create a Profile" Margin="0,10,0,5"/>
        <TextBlock Text="Step 2: Configure Output Groups" Margin="0,5,0,5"/>
        <TextBlock Text="Step 3: Start Streaming!" Margin="0,5,0,20"/>
        
        <!-- OK Button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding OkCommand}" Width="80" Background="#4285F4" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>
