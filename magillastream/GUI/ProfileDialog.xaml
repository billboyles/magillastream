<Window x:Class="GUI.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Profile" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Select Profile:" />
        <ComboBox x:Name="ProfileDropdown" Width="200" />

        <!-- New Button for Creating Profile -->
        <Button Content="Create New Profile" Click="CreateNewProfileButton_Click" Width="150" Margin="0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Use Profile" Click="UseProfileButton_Click" Width="100" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
