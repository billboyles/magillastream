<Window x:Class="GUI.CreateNewProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Profile" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Profile Name:" />
        <TextBox x:Name="ProfileNameBox" Width="200"/>

        <TextBlock Text="Password:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="200"/>

        <TextBlock Text="Confirm Password:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Width="200"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Submit" Click="Submit_Click" Width="100" Margin="5"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
