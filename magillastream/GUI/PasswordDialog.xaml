<Window x:Class="GUI.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="150" Width="300">
    <Grid Margin="10">
        <TextBlock Text="Enter your password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Left" Margin="10,30,0,0"/>
        <Button Content="OK" Width="100" HorizontalAlignment="Left" Margin="10,70,0,0" Click="OkButton_Click"/>
        <Button Content="Cancel" Width="100" HorizontalAlignment="Right" Margin="0,70,10,0" Click="CancelButton_Click"/>
    </Grid>
</Window>
